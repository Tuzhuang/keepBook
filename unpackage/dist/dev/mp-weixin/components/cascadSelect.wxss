.cascad-select .menu-con {
  display: flex;
}
.cascad-select .menu-con .main-menu {
  min-width: 200rpx;
}
.cascad-select .menu-con .main-menu .item {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #f1f1f1;
  font-size: 24rpx;
}
.cascad-select .menu-con .main-menu .item.active {
  font-weight: 600;
  overflow: hidden;
}
.cascad-select .menu-con .main-menu .item.active .label {
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.cascad-select .menu-con .main-menu .item.prev {
  border-bottom-right-radius: 30rpx;
}
.cascad-select .menu-con .main-menu .item.next {
  border-top-right-radius: 30rpx;
}
.cascad-select .menu-con .right-con {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.cascad-select .menu-con .right-con .sub-menu {
  padding: 10rpx;
  box-sizing: border-box;
  height: 80%;
  overflow-y: scroll;
}
.cascad-select .menu-con .right-con .sub-menu .sub-tag {
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
}
.cascad-select .menu-con .right-con .btn-con {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 20rpx;
}
.cascad-select .menu-con .right-con .btn-con .confirm {
  margin-left: 20rpx;
}

