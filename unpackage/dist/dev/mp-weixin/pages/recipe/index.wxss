.recipe .input-con {
  height: 100vh;
  position: relative;
}
.recipe .input-con .val {
  position: absolute;
  bottom: 600rpx;
  left: 20rpx;
  right: 20rpx;
}
.recipe .input-con .vegetable {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 200rpx;
  left: 0;
  right: 0;
  -webkit-animation: fadeShow 5s infinite;
          animation: fadeShow 5s infinite;
}
.recipe .input-con .vegetable .label {
  color: #333;
  font-size: 32rpx;
}
.recipe .input-con .desc-tit {
  color: #c0ae7d;
  position: absolute;
  bottom: 200rpx;
  left: 0;
  right: 0;
  text-align: center;
}
.recipe .result {
  height: 100vh;
}
.recipe .result .title {
  font-size: 38rpx;
  font-weight: 600;
  text-align: center;
  color: #c0ae7d;
  margin: 20rpx;
}
.recipe .result .result-con {
  padding: 0 30rpx 50rpx;
  box-sizing: border-box;
}
.recipe .result .result-con .tit {
  font-size: 26rpx;
  font-weight: 600;
  line-height: 80rpx;
  color: #c0ae7d;
  margin-top: 20rpx;
}
.recipe .result .result-con .tit .desc {
  font-size: 20rpx;
  color: #666;
  font-weight: normal;
}
.recipe .result .result-con .step-item {
  font-size: 24rpx;
  color: #333;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.recipe .result .result-con .step-item .step-name {
  font-size: 22rpx;
  font-weight: 600;
}
.recipe .result .result-con .step-item .step-desc {
  margin-bottom: 10rpx;
}
.recipe .result .result-con .thanks {
  font-size: 22rpx;
  margin-top: 50rpx;
  text-align: center;
  color: #c0ae7d;
}
@-webkit-keyframes fadeShow {
0% {
    -webkit-transform: scale(0.8);
            transform: scale(0.8);
    opacity: 0;
}
50% {
    -webkit-transform: scale(1.2);
            transform: scale(1.2);
    opacity: 1;
}
100% {
    -webkit-transform: scale(0.8);
            transform: scale(0.8);
    opacity: 0;
}
}
@keyframes fadeShow {
0% {
    -webkit-transform: scale(0.8);
            transform: scale(0.8);
    opacity: 0;
}
50% {
    -webkit-transform: scale(1.2);
            transform: scale(1.2);
    opacity: 1;
}
100% {
    -webkit-transform: scale(0.8);
            transform: scale(0.8);
    opacity: 0;
}
}

