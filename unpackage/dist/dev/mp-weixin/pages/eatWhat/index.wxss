.eat-what {
  padding: 0 20rpx;
  box-sizing: border-box;
}
.eat-what .query-cond .query-fancy {
  margin-bottom: 40rpx;
}
.eat-what .query-cond .query-fancy .fancy-con {
  max-height: 400rpx;
  background-color: #f4f4f5;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}
.eat-what .query-cond .query-fancy .fancy-con .record-item {
  font-size: 20rpx;
  height: 78rpx;
  color: #333;
}
.eat-what .query-cond .query-fancy .fancy-con .record-item .title {
  font-size: 30rpx;
}
.eat-what .query-cond .query-fancy .fancy-con .record-item .detail-address {
  line-height: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.eat-what .query-cond .din-type {
  position: relative;
  margin-bottom: 40rpx;
}
.eat-what .query-cond .din-type .type-holder {
  width: 100%;
  height: 70rpx;
  position: absolute;
  top: 49rpx;
  z-index: 10;
}
.eat-what .query-cond .label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.eat-what .din-room {
  margin-top: 40rpx;
  padding-left: 20rpx;
  max-height: 600rpx;
  overflow-y: scroll;
}
.eat-what .not-data {
  text-align: center;
  margin-top: 100rpx;
  color: #999;
}
.eat-what .btn {
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 220rpx;
  left: 0;
  right: 0;
}
.eat-what .btn .u-button {
  width: 32%;
}
.eat-what .btn .u-button:nth-child(2) {
  width: 58%;
}
.eat-what .cur-food {
  height: 200rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
}
.eat-what .cur-food .din-name {
  font-size: 42rpx;
  color: #333;
}
.eat-what .cur-food .din-address {
  font-size: 24rpx;
  color: #999;
  line-height: 50rpx;
}
.eat-what .u-popup__content {
  height: 250px;
}
.eat-what .din-type-popup {
  height: 500rpx;
}

